<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".register_activity"
    tools:ignore="NamespaceTypo">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            tools:ignore="DuplicateClickableBoundsCheck">

            <EditText
                android:id="@+id/user_first_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey"
                android:hint="First Name"
                android:textColorHint="@color/dark_grey"
                android:inputType="text"
                android:padding="20dp"
                android:textColor="@color/black"
                tools:ignore="Autofill,HardcodedText" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            tools:ignore="DuplicateClickableBoundsCheck">

            <EditText
                android:id="@+id/user_last_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey"
                android:hint="Last Name"
                android:textColorHint="@color/dark_grey"
                android:inputType="text"
                android:padding="20dp"
                android:textColor="@color/black"
                tools:ignore="Autofill,HardcodedText" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="5dp"
            app:cardCornerRadius="20dp"
            tools:ignore="DuplicateClickableBoundsCheck">

            <EditText
                android:id="@+id/user_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey"
                android:hint="Email"
                android:textColorHint="@color/dark_grey"
                android:inputType="textEmailAddress"
                android:padding="20dp"
                android:textColor="@color/black"
                tools:ignore="Autofill,HardcodedText" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp"
            tools:ignore="DuplicateClickableBoundsCheck">

            <EditText
                android:id="@+id/user_pass"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey"
                android:hint="Password"
                android:textColorHint="@color/dark_grey"
                android:inputType="textPassword"
                android:padding="20dp"
                android:textColor="@color/black"
                tools:ignore="Autofill,HardcodedText" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp"
            tools:ignore="DuplicateClickableBoundsCheck">

            <EditText
                android:id="@+id/phone_user"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey"
                android:hint="Phone Number"
                android:textColorHint="@color/dark_grey"
                android:inputType="number"
                android:padding="20dp"
                android:textColor="@color/black"
                tools:ignore="Autofill,HardcodedText,TextFields" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp"
            tools:ignore="DuplicateClickableBoundsCheck">

            <EditText
                android:id="@+id/nanny_about"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey"
                android:hint="About You(Will be visible to the parent)"
                android:textColorHint="@color/dark_grey"
                android:inputType="text"
                android:padding="20dp"
                android:textColor="@color/black"
                tools:ignore="Autofill,HardcodedText,TextFields" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp"
            tools:ignore="DuplicateClickableBoundsCheck">

            <EditText
                android:id="@+id/no_years"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey"
                android:hint="Number of years Experience"
                android:textColorHint="@color/dark_grey"
                android:inputType="number"
                android:padding="20dp"
                android:textColor="@color/black"
                tools:ignore="Autofill,HardcodedText,TextFields" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp"
            tools:ignore="DuplicateClickableBoundsCheck">

            <EditText
                android:id="@+id/aadhar_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey"
                android:hint="Aadhar Card Number"
                android:textColorHint="@color/dark_grey"
                android:inputType="number"
                android:padding="20dp"
                android:textColor="@color/black"
                tools:ignore="Autofill,HardcodedText,TextFields" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp"
            tools:ignore="DuplicateClickableBoundsCheck">

            <EditText
                android:id="@+id/reference_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey"
                android:hint="Reference Number"
                android:textColorHint="@color/dark_grey"
                android:inputType="number"
                android:padding="20dp"
                android:textColor="@color/black"
                tools:ignore="Autofill,HardcodedText,TextFields" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/black"
            app:cardCornerRadius="40dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="bottom"
            tools:ignore="DuplicateClickableBoundsCheck">

            <Button
                android:id="@+id/register_nanny"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/black"
                android:text="Register"
                android:textColor="@color/white"
                tools:ignore="HardcodedText" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</ScrollView>